<?xml version="1.0" encoding="UTF-8"?>
<sy:switchyard xmlns:bean="urn:switchyard-component-bean:config:1.1" xmlns:camel="urn:switchyard-component-camel:config:1.1" xmlns:file="urn:switchyard-component-camel-file:config:1.1" xmlns:jpa="urn:switchyard-component-camel-jpa:config:1.1" xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912" xmlns:sy="urn:switchyard-config:switchyard:1.1" name="fsw-sample-service" targetNamespace="urn:org.jboss.examples:fsw-sample-service:1.0">
  <sca:composite name="fsw-sample-service" targetNamespace="urn:org.jboss.examples:fsw-sample-service:1.0">
    <sca:component name="FileProcessorBean">
      <camel:implementation.camel>
        <camel:java class="org.jboss.examples.FileProcessorBean"/>
      </camel:implementation.camel>
      <sca:service name="FileProcessor">
        <sca:interface.java interface="org.jboss.examples.FileProcessor"/>
      </sca:service>
      <sca:reference name="CSVRecord2JPAObject">
        <sca:interface.java interface="org.jboss.examples.CSVRecord2JPAObject"/>
      </sca:reference>
    </sca:component>
    <sca:service name="FileProcessor" promote="FileProcessorBean/FileProcessor">
      <sca:interface.java interface="org.jboss.examples.FileProcessor"/>
      <file:binding.file name="FileProcessorEndpoint">
        <file:directory>/tmp</file:directory>
        <file:fileName>captation.csv</file:fileName>
        <file:consume>
          <file:delete>true</file:delete>
        </file:consume>
      </file:binding.file>
    </sca:service>
    <sca:component name="CSVRecord2JPAObjectBean">
      <bean:implementation.bean class="org.jboss.examples.CSVRecord2JPAObjectBean"/>
      <sca:service name="CSVRecord2JPAObject">
        <sca:interface.java interface="org.jboss.examples.CSVRecord2JPAObject"/>
      </sca:service>
      <sca:reference name="StoreCaptation">
        <sca:interface.java interface="org.jboss.examples.jpa.StoreCaptation"/>
      </sca:reference>
    </sca:component>
    <sca:reference name="StoreCaptation" multiplicity="0..1" promote="CSVRecord2JPAObjectBean/StoreCaptation">
      <sca:interface.java interface="org.jboss.examples.jpa.StoreCaptation"/>
      <jpa:binding.jpa name="jpa1">
        <jpa:entityClassName>org.jboss.examples.jpa.model.Captation</jpa:entityClassName>
        <jpa:persistenceUnit>JpaSample</jpa:persistenceUnit>
        <jpa:transactionManager>#jtaTransactionManager</jpa:transactionManager>
        <jpa:produce/>
      </jpa:binding.jpa>
    </sca:reference>
  </sca:composite>
</sy:switchyard>